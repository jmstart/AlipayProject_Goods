<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 开始 -->
	<!-- 扫描 Controller 注解 -->
	<context:component-scan
		base-package="com.jiaming" use-default-filters="false">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
	</context:component-scan>

	<!-- 放行静态资源 -->
	<mvc:default-servlet-handler />

	<!-- 开启SpringMVC的注解功能 -->
	<mvc:annotation-driven></mvc:annotation-driven>

	<!-- 配置视图转换器 -->
	<!-- return "res" ; /WEB-INF/pages/res.jsp -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>

	<!-- 配置拦截器 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/cart/**" />
			<mvc:mapping path="/order/**" />
			<mvc:mapping path="/user/logout.action" />
			<mvc:mapping path="/user/changePwd.action" />
			<mvc:mapping path="/user/verifyPwd.action" />
			<bean class="com.jiaming.interceptors.LoginInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

</beans>
