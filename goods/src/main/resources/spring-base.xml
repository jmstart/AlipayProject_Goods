<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">
	
	<!-- 开始 -->
	<!-- 引入外部配置文件 -->
	<context:property-placeholder   location="classpath:db.properties"/>
	<!-- Spring注解扫描器   配置分离   -->
	<context:component-scan base-package="com.jiaming">
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>
	
	<!-- 可有可无的  开启了 Spring注解的形式  管理事务  @Transaction-->
	<!-- <tx:annotation-driven/> -->
	
	<!-- 配置数据源   Druid OGNL-->
	<bean  class="com.alibaba.druid.pool.DruidDataSource"  id="dataSource">
		<property name="username"  value="${jdbc.user}" />
		<property name="password"  value="${jdbc.password}" />
		<property name="url"  value="${jdbc.jdbcUrl}" />
		<property name="driverClassName"  value="${jdbc.driverClass}" />
	</bean>
	
	<!-- 配置  Spring的事务管理器 -->
	<bean  class="org.springframework.jdbc.datasource.DataSourceTransactionManager"  id="transactionManager">
		<property name="dataSource"  ref="dataSource"></property>
	</bean>
	
	<!-- 配置事务增强 -->
	<tx:advice  id="advice1"  transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="*"  propagation="REQUIRED"/>
		</tx:attributes>
	</tx:advice>
	
	<!-- 配置事务处理的  切面 -->
	<aop:config>
		<!-- 配置切点 -->
		<aop:pointcut expression="execution(* com.jiaming.*.service.*.*(..))" id="cut1"/>
		<!-- 配置切面  -->
		<aop:advisor advice-ref="advice1"  pointcut-ref="cut1"/>
	</aop:config>
	
	<!-- Spring和Mybatis整合  -->
	<!-- Sqlsession是由SqlSEssionFactory生产的 -->
	<bean  class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 定位  Mybatis的主配置文件 -->
		<property name="configLocation"  value="classpath:mybatis.xml"></property>
		<!-- 指定  数据源 -->
		<property name="dataSource"  ref="dataSource"></property>
	</bean>
	
	<!-- Mybatis的代理对象StudentMapper接口  -->
	<mybatis-spring:scan base-package="com.jiaming.mapper"/>
	
	<!-- 结束 -->
</beans>